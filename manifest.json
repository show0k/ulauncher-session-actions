{
  "manifest_version": "1.1",
  "api_version": "1",
  "name": "Session Actions",
  "description": "Logout / Reboot / Shutdown / Suspend easily.",
  "developer_name": "gurkan.in",
  "icon": "images/exit.png",
  "options": {
    "query_debounce": 0.1
  },
  "preferences": [
    {
      "id": "sessionactions_ext",
      "type": "keyword",
      "name": "Session Actions",
      "description": "Logout / Reboot / Shutdown / Suspend easily.",
      "default_value": "exit"
    },
    {
        "id": "suspend_command",
        "type": "input",
        "name": "Command to run to execute suspend action",
        "default_value": "xfce4-session-logout --suspend"
    },
    {
        "id": "logout_command",
        "type": "input",
        "name": "Command to run to execute logout action",
        "default_value": "xfce4-session-logout --logout"
    },
    {
        "id": "shutdown_command",
        "type": "input",
        "name": "Command to run to execute shutdown action",
        "default_value": "xfce4-session-logout --halt"
    },
    {
        "id": "reboot_command",
        "type": "input",
        "name": "Command to run to execute reboot action",
        "default_value": "xfce4-session-logout --reboot"
    }
  ]
}

